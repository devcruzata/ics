@{
    Layout = "~/Views/Shared/_LayoutPageLogin.cshtml";
}

<div class="container page-container">
    <div class="page-content">
        <div class="logo"><img class="m-10" src="@Url.Content("~/Content/build/images/logo/login-logo.png")" alt="" width="190"></div>
        @*<div id="esp-profile" data-percent="65" style="height: 130px; width: 130px; line-height: 100px; padding: 15px;" class="easy-pie-chart"><img src="@Url.Content("~/Content/build/images/users/04.jpg")" alt="" width="100" class="img-circle"></div>*@
        <h4 class="fs-16 text-white mt-15 fw-300">@ViewBag.Email</h4>
        <p class="text-muted">Please Enter a password to Activate Your Account.</p>
        <br>
        <form method="post" action="/Authentication/AccountActivation">
            <div class="form-group">
                <input type="hidden" name="Username" value="@ViewBag.Email" />
                <input type="password" placeholder="Enter Password" class="form-control" name="Password">
                <input type="hidden" name="SubscriptionID" value="@ViewBag.PIN" />
            </div>
        </form>
    </div>
</div>
